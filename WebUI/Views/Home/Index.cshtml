@model HomeViewModel




<!-- Container Home -->
<div class="container">
    <!-- Last News -->
    <h2>Last News</h2>
    <div class="row" >
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">

          <div class="carousel-indicators">
                        @for (var counterIndicator = 0; counterIndicator < Model.LastNews.Count ; counterIndicator++)
                        {
                    
                            if(@counterIndicator == 0)
                            {
                               <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@counterIndicator" aria-label="Slide @counterIndicator" class="active" aria-current="true" ></button>
                            }
                            else
                            {
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@counterIndicator" aria-label="Slide @counterIndicator"></button>

                            }
   
                        };              
          </div>


          <div class="carousel-inner">
              @for (var counterSlide = 0; counterSlide < Model.LastNews.Count  ; counterSlide++)
                            {
   
                                if(@counterSlide == 0)
                                {
                                    <div class="carousel-item active">
                                      <img src="@Model.LastNews[@counterSlide].Image" class="d-block w-100" style="height:30rem;" alt="ali">
                                      <div class="carousel-caption d-none d-md-block"> 
                                        <h4><a class="text-decoration-none text-white" href="/news/@Model.LastNews[@counterSlide].Slug">@Model.LastNews[@counterSlide].Title</a></h4>
                                        <p>@Model.LastNews[@counterSlide].MetaDescription</p>
                                      </div>
                                    </div>
                                }
                                else
                                {
                                   <div class="carousel-item ">
                                      <img src="@Model.LastNews[@counterSlide].Image" style="height:30rem;" class="d-block w-100" alt="ali">
                                      <div class="carousel-caption d-none d-md-block">
                                          <h4 ><a class="text-decoration-none text-white" href="/news/@Model.LastNews[@counterSlide].Slug" >@Model.LastNews[@counterSlide].Title</a></h4>
                                        <p>@Model.LastNews[@counterSlide].MetaDescription</p>
                                      </div>
                                    </div> 
                                }

                            };
          </div>



          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
    </div>


    <!-- Hot News And MostVisited News Row -->
    <div class="row">
        <!-- Hot News -->
        
        <div class="col-sm-6 border">
            <h2>Hot News</h2>
            <hr />
            @foreach (var item in Model.HotNews)
            {
                <a class="text-decoration-none " href="/news/@item.Slug">@item.Title</a>
                <p>@item.MetaDescription</p>
            }
        </div>

        <!-- MostVisited News -->
        <div class="col-sm-6 border">
            <h2>Most Visited News</h2>
            <hr />
            @foreach (var item in Model.MostVisited)
            {
                <a class="text-decoration-none " href="/news/@item.Slug">@item.Title</a>
                <p>@item.MetaDescription</p>
            }
        </div>

        
    </div>

    <!-- Random News -->
    <div class="row border" style="height:250px">
        <h2>Random News</h2>
        <hr />

        @foreach (var item in Model.RandomNews)
            {
                <a class="text-decoration-none " href="/news/@item.Slug">@item.Title</a>
                <p>@item.MetaDescription</p>
            }
    </div>
</div>